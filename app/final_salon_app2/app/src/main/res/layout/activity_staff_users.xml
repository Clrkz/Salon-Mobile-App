            <RelativeLayout
                android:id="@+id/relativeLayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout4"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="30dp">

                <ImageView
                    android:id="@+id/gender_moto"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/s2"
                    android:padding="8dp"
                    android:src="@drawable/gender"
                    android:tint="@color/white" />

                <RadioGroup
                    android:id="@+id/rdg_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/gender_moto"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/gender_moto"
                    android:background="@color/s3"
                    android:hint="Username"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:textSize="15sp">


                    <RadioButton
                        android:id="@+id/rd_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Male"
                        android:textSize="15sp"
                        android:textColor="@color/rbtn"/>

                    <RadioButton
                        android:id="@+id/rd_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="Female"
                        android:textSize="15sp"
                        android:textColor="@color/rbtn"/>

                </RadioGroup>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout6"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/button_rounded"
                        android:text="Cancel"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/btn_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/button_rounded"
                        android:text="Next"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>