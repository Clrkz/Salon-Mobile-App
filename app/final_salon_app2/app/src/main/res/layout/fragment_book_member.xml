<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="20dp">

                <ImageView
                    android:id="@+id/emailmoto"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/s2"
                    android:padding="8dp"
                    android:src="@drawable/ic_date"
                    android:tint="@color/white" />

                <EditText
                    android:id="@+id/et_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/emailmoto"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/emailmoto"
                    android:background="@color/s3"
                    android:clickable="true"
                    android:editable="false"
                    android:focusable="false"
                    android:longClickable="false"
                    android:paddingLeft="20dp"
                    android:hint="Select date"
                    android:inputType="text"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp">

                <ImageView
                    android:id="@+id/lockmoto"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/s2"
                    android:padding="8dp"
                    android:src="@drawable/ic_time"
                    android:tint="@color/white" />

                <EditText
                    android:id="@+id/et_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/lockmoto"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/lockmoto"
                    android:background="@color/s3"
                    android:clickable="true"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="Select time"
                    android:inputType="text"
                    android:longClickable="false"
                    android:paddingLeft="20dp"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout3"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/lockmoto1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/s2"
                    android:padding="8dp"
                    android:src="@drawable/ic_total"
                    android:tint="@color/white" />

                <EditText
                    android:id="@+id/et_total_services"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/lockmoto1"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/lockmoto1"
                    android:background="@color/s3"
                    android:hint="Total services"
                    android:paddingLeft="20dp"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout4"
                android:layout_marginLeft="20dp"
                android:visibility="invisible"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp">

                <ImageView
                    android:id="@+id/name"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/s2"
                    android:padding="8dp"
                    android:src="@drawable/ic_total"
                    android:tint="@color/white" />

                <EditText
                    android:id="@+id/et_total_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/name"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/name"
                    android:background="@color/s3"
                    android:hint="Total price"
                    android:paddingLeft="20dp"
                    android:textSize="15sp" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relativeLayout8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout7"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="90dp"
                android:layout_marginRight="30dp">

                <LinearLayout
                    android:id="@+id/lnbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/button_rounded"
                        android:text="Cancel"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/btn_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/button_rounded"
                        android:text="Book"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                </LinearLayout>
                <TextView
                    android:id="@+id/tvfhr"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/lnbtn"
                    android:layout_height="wrap_content"
                    android:text="Booking Start Hour"/>

                <TextView
                    android:id="@+id/tvthr"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/tvfhr"
                    android:layout_height="wrap_content"
                    android:text="Booking End Hour"/>

                <TextView
                    android:id="@+id/tvcdate"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/tvthr"
                    android:layout_height="wrap_content"
                    android:text="Booking Closed Date"/>

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>